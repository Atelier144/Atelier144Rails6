/*------------------------------GAME RECORDS------------------------------*/

.games-records {
    @media(max-width:800px) {
        margin: 0px 10px 20px;
    }

    @media(min-width:800px) {
        width: 720px;
        margin: 0px auto 20px;
    }

    padding: 0px 20px 10px;
    background-color: white;
    border: 1px solid #D8D8D8;

    h3 {
        line-height: 80px;
        font-size: 20px;
        text-align: center;
        border-bottom: 1px solid #D8D8D8;

    }

    table.infinite-blocks-records {
        margin: 0px auto;
        padding: 0px;

        thead {
            border-bottom: 1px solid #D8D8D8;

            tr {
                font-size: 20px;
                font-weight: 200;
                line-height: 40px;
                letter-spacing: 1px;

                td:nth-child(1) {
                    text-align: center;
                    width: 60px;
                }

                td:nth-child(2) {
                    text-align: center;
                    width: 240px;
                }

                td:nth-child(3) {
                    text-align: center;
                    width: 120px;
                }

                td:nth-child(4) {
                    text-align: center;
                    width: 60px;
                }

                td:nth-child(5) {
                    text-align: center;
                    width: 160px;
                }
            }
        }

        tbody {
            letter-spacing: 1px;

            tr:nth-child(1) {
                color: gold;
                font-size: 20px;
            }

            tr:nth-child(2) {
                color: silver;
                font-size: 19px;
            }

            tr:nth-child(3) {
                color: chocolate;
                font-size: 18px;
            }

            tr:nth-child(4+n) {
                color: black;
                font-size: 16px;
            }

            td:nth-child(1) {
                text-align: center;
            }

            td:nth-child(2) {
                text-align: left;

                img {
                    margin-top: 5px;
                    margin-bottom: 5px;
                    margin-left: 5px;
                    display: inline-block;
                    width: 40px;
                    height: 40px;
                    border-radius: 20px;
                }

                a:nth-child(2) {
                    font-size: 14px;
                    margin-left: 10px;
                }
            }

            td:nth-child(3) {
                text-align: center;
            }

            td:nth-child(4) {
                text-align: center;
            }

            td:nth-child(5) {
                text-align: center;
            }
        }
    }
}

.users-records {
    padding: 10px;

    h4 {
        display: flex;
        align-items: center;
        padding: 0px;
        font-weight: 400;
        font-size: 20px;
        line-height: 30px;

        &::before,
        &::after {
            content: "";
            flex-grow: 1;
            border-top: 2px dashed black;
        }

        &::before {
            margin-right: 20px;
        }

        &::after {
            margin-left: 20px;
        }
    }

    table.infinite-blocks {
        margin-top: 10px;

        thead {
            border-bottom: 1px solid black;
            vertical-align: bottom;

            tr {

                td:nth-child(1) {
                    padding-right: 20px;
                    font-size: 20px;
                    letter-spacing: 1px;
                }

                td:nth-child(n+2) {
                    font-size: 14px;
                    font-weight: 300;
                    text-align: center;
                }
            }
        }

        tbody {
            tr {
                border-bottom: 1px solid #BFBFBF;

                td:nth-child(1) {
                    font-size: 16px;
                    font-weight: 400;
                }

                td:nth-child(n+2) {
                    font-size: 16px;
                    font-weight: 200;
                    text-align: center;
                    letter-spacing: 1px;
                }
            }
        }
    }
}
