/*------------------------------SETTING MENU------------------------------*/

.setting-menu {
    margin-bottom: 40px;
    height: 20px;
    line-height: 20px;
    display: flex;
    flex-wrap: wrap;
    justify-content: center;

    li {
        list-style: none;
        padding-left: 10px;
        padding-right: 10px;
    }

    li + li {
        border-left: 1px solid black;
    }
}

