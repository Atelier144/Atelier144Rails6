* {
    box-sizing: border-box;
}

body {
    padding-top: 100px;
    background-color: #F7F7F7;
}

ul {
    margin: 0px;
    padding: 0px;
}

li {
    margin: 0px;
    padding: 0px;
}

h1 {
    margin: 0px;
    padding: 50px 0px;
    font-weight: 300;
    font-size: 36px;
    line-height: 50px;
    text-align: center;
}

h2 {
    display: flex;
    align-items: center;
    margin: 30px 20px;
    padding: 0px;
    font-weight: 100;
    font-size: 28px;
    line-height: 40px;

    &::before,
    &::after {
        content: "";
        flex-grow: 1;
        border-top: 1px solid black;
    }

    &::before {
        margin-right: 30px;
    }

    &::after {
        margin-left: 30px;
    }
}

h3,
h4,
h5,
h6,
p {
    margin: 0px;
    padding: 0px;
}

a {
    color: #3399FF;
    text-decoration: none;

    &:hover {
        text-decoration: none;
    }
}

//------------------------------ HEADER ------------------------------

header {
    width: 100%;
    height: 100px;
    position: fixed;
    top: 0px;
    left: 0px;
    background-color: #99CC00;
    box-shadow: 0px 0px 8px 0px rgba(0, 0, 0, 0.5);
    z-index: 10;

    a.logo {
        display: block;
        width: 240px;
        height: 90px;
        position: absolute;
        top: 5px;
        left: 5px;
        background-image: url("<%= asset-path("HeaderLogo.png") %>");

        &:hover {
            background-image: url("<%= asset-path("HeaderLogoHover.png") %>");
        }
    }

    ul.menu {
        position: absolute;
        top: 10px;
        right: 0px;
        height: 80px;
        justify-content: flex-end;

        @media(max-width:800px) {
            display: none;
        }

        @media(min-width:800px) {
            display: flex;
        }

        li {
            list-style: none;

            a {
                display: block;
                margin: 0px 10px;
                padding: 25px 5px;
                line-height: 30px;
                font-size: 16px;
                font-weight: 400;
                color: white;

                &:hover {
                    color: #DFFF80;
                }
            }

            .user-image {
                margin-left: 10px;
                margin-right: 10px;
                width: 80px;
                height: 80px;
                cursor: pointer;

                img {
                    width: 80px;
                    height: 80px;
                    border-radius: 40px;
                }
            }

        }

        li:nth-child(2) {
            margin-right: 5px;
            padding-right: 5px;
            border-right: 1px solid white;
        }
    }

    .popup-menu {
        display: none;
        position: fixed;
        top: 10px;
        right: 10px;
        width: 320px;
        height: 230px;
        background-color: white;
        z-index: 20;
        border: 2px solid #D8D8D8;

        img {
            width: 50px;
            height: 50px;
            position: absolute;
            top: 10px;
            left: 20px;
            border-radius: 25px;
        }

        p {
            position: absolute;
            top: 10px;
            left: 80px;
            line-height: 50px;
            font-size: 16px;
        }

        ul {
            width: 300px;
            position: absolute;
            top: 70px;
            left: 10px;
            border-top: 1px solid #D8D8D8;

            li {
                height: 50px;
                margin: 0px;
                padding: 10px 0px;
                list-style: none;

                a {
                    display: block;
                    width: 100%;
                    line-height: 30px;
                    padding-left: 10px;
                    color: #9B9B9B;
                    font-size: 16px;
                    text-decoration: none;

                    &:hover {
                        color: black;
                    }

                    span.icon {
                        display: inline-block;
                        margin-right: 12px;
                        width: 24px;
                        text-align: center;
                    }
                }
            }
        }

        .close {
            display: block;
            width: 40px;
            height: 40px;
            line-height: 40px;
            font-size: 32px;
            text-align: center;
            position: absolute;
            top: 15px;
            right: 10px;
            cursor: pointer;
            color: #9B9B9B;

            &:hover {
                color: black;
            }
        }
    }

    .pulldown-menu {
        display: none;
        width: 100%;
        position: fixed;
        top: 100px;
        left: 0px;
        background-color: #608000;
        z-index: 9;
        box-shadow: 0px 0px 8px 0px rgba(0, 0, 0, 0.5);
        padding: 10px 20px 20px;

        ul {
            li {
                height: 50px;
                padding: 10px 0px;
                list-style: none;

                a {
                    line-height: 30px;
                    color: white;
                    font-size: 16px;
                    text-decoration: none;

                    &:hover {
                        color: #DFFF80;
                    }
                }
            }
        }

        .user-information {
            padding: 0px 10px;
            background-color: #739900;

            .user {
                height: 70px;
                position: relative;
                border-bottom: 1px solid #DFFF80;

                img {
                    width: 50px;
                    height: 50px;
                    border-radius: 25px;
                    position: absolute;
                    top: 10px;
                    left: 10px;
                }

                p {
                    height: 50px;
                    line-height: 50px;
                    position: absolute;
                    top: 10px;
                    left: 70px;
                    font-size: 16px;
                    color: white;
                }
            }

            ul {
                li {
                    height: 50px;
                    padding: 10px 0px 10px 10px;
                    list-style: none;

                    a {
                        display: block;
                        width: 100%;
                        line-height: 30px;
                        color: white;
                        font-size: 16px;
                        text-decoration: none;

                        &:hover {
                            color: #DFFF80;
                        }
                    }

                    span.icon {
                        display: inline-block;
                        margin-right: 12px;
                        width: 24px;
                        text-align: center;
                    }
                }
            }
        }
    }

    .hamburger {
        @media(max-width:800px) {
            display: block;
        }

        @media(min-width:800px) {
            display: none;
        }

        width: 80px;
        height: 60px;
        line-height: 55px;
        font-size: 36px;
        position: absolute;
        top: 20px;
        right: 10px;
        border: 2px solid white;
        border-radius: 10px;
        text-align: center;
        color: white;
        cursor: pointer;

        &:hover {
            border-color: #DFFF80;
            color: #DFFF80;
        }
    }
}

//------------------------------ FOOTER ------------------------------

footer {
    width: 100%;
    padding-top: 20px;
    background-color: #4D4D4D;

    ul.menu {
        display: flex;
        justify-content: center;

        li {
            margin-right: 10px;
            margin-left: 10px;
            list-style: none;

            a {
                text-decoration: underline;
                line-height: 20px;
                font-size: 14px;
                color: white;
            }
        }
    }

    h5 {
        margin-top: 20px;
        margin-bottom: 0px;
        height: 20px;
        line-height: 20px;
        font-size: 18px;
        color: white;
        text-align: center;
        letter-spacing: 1px;
    }

    .twitter {
        width: 40px;
        height: 40px;
        display: block;
        margin: 10px auto 0px;
        background-image: url("<%= asset-path("Twitter.png") %>");
        background-size: cover;
    }

    .copyrights {
        margin-top: 20px;
        line-height: 30px;
        font-style: normal;
        color: white;
        text-align: center;
        letter-spacing: 1px;
    }
}

//------------------------------ COMMON ------------------------------

.page-top {
    @media(max-width: 800px) {
        display: none;
    }

    @media(min-width: 800px) {
        display: block;
    }

    width: 60px;
    height: 60px;
    padding-top: 10px;
    padding-bottom: 10px;
    line-height: 40px;
    text-align: center;
    background-color: #99CC00;
    border-radius: 30px;
    position: fixed;
    z-index: 15;
    right: 20px;
    bottom: 20px;
    cursor: pointer;
    font-size: 32px;
    color: white;
}

.sponsored-link {
    h6 {
        text-align: center;
        font-size: 12px;
        font-weight: 100;
        line-height: 20px;
    }

    .ads-body {
        width: 729px;
        height: 90px;
        margin: 0px auto;
        background-color: gainsboro;
        padding-top: 30px;
        padding-bottom: 30px;
        text-align: center;
        line-height: 30px;
        font-size: 16px;
        font-weight: 100;
    }
}

.preparation {
    width: 360px;
    display: flex;
    align-items: center;
    margin: 0px auto;
    padding: 0px;
    font-weight: 400;
    font-size: 20px;
    line-height: 30px;
    color: #D8D8D8;

    &::before,
    &::after {
        content: "";
        flex-grow: 1;
        border-top: 5px dotted #D8D8D8;
    }

    &::before {
        margin-right: 20px;
    }

    &::after {
        margin-left: 20px;
    }
}

//------------------------------ HOME ------------------------------
.mobile-only {
    @media(max-width:800px) {
        display: block;
    }

    @media(min-width:800px) {
        display: none;
    }
}

.desktop-only {
    @media(max-width:800px) {
        display: none;
    }

    @media(min-width:800px) {
        display: block;
    }
}

.top-background {
    width: 100%;
    height: 540px;
    background-image: url("<%= asset-path("TopBackground.jpg") %>");
    background-size: cover;

    h1 {
        display: none;
        margin: 0px;
        padding: 80px 60px 0px;
        font-family: "Arial Narrow";
        font-size: 48px;
        font-weight: 100;
        letter-spacing: 2px;
        color: white;
        text-align: left;
        line-height: 60px;
    }

    p {
        display: none;
        padding: 120px 60px 0px;
        font-size: 18px;
        font-weight: 200;
        color: white;
        letter-spacing: 1px;
    }
}

/*------------------------------NEWS------------------------------*/
table.news {
    @media(max-width: 800px) {
        margin-left: 10px;
        margin-right: 10px;
    }

    @media(min-width: 800px) {
        width: 800px;
        margin-right: auto;
        margin-left: auto;
    }

    tbody {
        tr {
            td:nth-child(1) {
                width: 150px;
                color: #608000;
                font-weight: 300;
                font-size: 16px;
                text-align: left;
            }

            td:nth-child(2) {
                font-weight: 300;
                font-size: 16px;
                text-align: left;
            }
        }
    }
}

/*------------------------------GAMES------------------------------*/
table.games {
    margin: 0px auto 100px;
    padding: 0px;

    tbody {
        tr {
            margin: 0px;
            padding: 0px;

            td {
                margin: 0px;
                padding: 0px;

                .web-game {
                    display: block;
                    width: 280px;
                    height: 400px;
                    margin: 15px;
                    padding: 0px 12px;
                    border: 1px solid #A0A0A0;
                    color: black;
                    text-decoration: none;
                    background-color: white;

                    &:hover {
                        background-color: #F2FFCC;
                    }

                    img {
                        display: block;
                        margin: 0px;
                        padding: 0px;
                        width: 256px;
                        height: 192px;
                    }

                    .title {
                        height: 60px;
                        line-height: 60px;
                        font-size: 24px;
                        font-weight: 100;
                        text-align: center;
                        text-decoration: none;
                    }

                    .genre {
                        height: 40px;
                        line-height: 40px;
                        font-size: 16px;
                        font-weight: 100;
                        text-align: center;
                        text-decoration: none;
                    }

                    .description {
                        padding: 0px 10px;
                        font-size: 12px;
                        font-weight: 100;
                        text-align: left;
                        text-decoration: none;
                    }
                }
            }
        }
    }
}



/*------------------------------FLASH------------------------------*/

.flash {
    position: fixed;
    bottom: 0px;
    left: 0px;
    z-index: 6;
    width: 100%;
    height: 80px;
    line-height: 80px;
    background-color: darkorange;
    font-size: 20px;
    color: white;
    text-align: center;
}

/*------------------------------POPUP IMAGE------------------------------*/

.popup-image-background {
    display: none;
    width: 100%;
    height: 100%;
    position: fixed;
    top: 0px;
    left: 0px;
    background-color: rgba(0, 0, 0, 0.7);
    z-index: 100;

    .popup-image {
        margin: auto;
        position: relative;
        cursor: pointer;

        p {
            color: white;
            text-align: center;
            position: absolute;
            bottom: 0px;
        }
    }
}

/*------------------------------TERMS------------------------------*/

.terms-contents {
    padding: 40px 30px 50px;
    background-color: white;

    @media(max-width:960px) {
        margin: 0px 0px 100px;
        width: 100%;
        border-top: 1px solid black;
        border-bottom: 1px solid black;
    }

    @media(min-width:960px) {
        margin: 0px auto 100px;
        width: 960px;
        border: 1px solid black;
    }

    h3 {
        margin: 25px 0px 10px;
        padding: 0px;
        font-size: 20px;
        line-height: 20px;
        text-align: left;
    }

    h4 {
        margin: 20px 0px 10px;
        font-size: 14px;
    }

    p {
        margin: 0px;
        padding: 0px;
        font-size: 14px;
    }

    ul {
        margin-left: 40px;
    }

    li ul {
        margin-left: 20px;

        li {
            list-style-type: disc;
        }
    }

    table.number-list {
        font-size: 14px;
        border-collapse: separate;
        border-spacing: 0px 5px;

        tbody {
            tr {
                margin-top: 5px;

                td:nth-child(1) {
                    width: 40px;
                    padding-right: 8px;
                    text-align: right;
                    letter-spacing: 1px;
                }
            }
