<h1>Infinite Blocks</h1>

<ul class="setting-menu">
    <li>
        <%= link_to("総合ランキング", "/games/infinite-blocks/records") %>
    </li>
    <li>
        <%= link_to("年間ランキング", "/games/infinite-blocks/records/yearly") %>
    </li>
    <li>
        <%= link_to("月間ランキング", "/games/infinite-blocks/records/monthly") %>
    </li>
    <li>
        <%= link_to("週間ランキング", "/games/infinite-blocks/records/weekly") %>
    </li>
</ul>
<div class="games-records">
    <h3><%= @title %></h3>
    <table class="infinite-blocks-records">
        <thead>
            <tr>
                <td>Rank</td>
                <td>User</td>
                <td>Score</td>
                <td>Level</td>
                <td>Date</td>
            </tr>
        </thead>
        <tbody>
            <% @records.each.with_index(1) do |record, rank| %>
            <tr>
                <td><%= rank %></td>
                <td><%= link_to("/profiles/#{record.user.id}") do %><%= image_tag(record.user.image_url) %><% end %><%= link_to(record.user.name, "/profiles/#{record.user.id}") %></td>
                <td><%= record.score %></td>
                <td><%= record.level%></td>
                <td><%= record.updated_at.strftime("%Y/%m/%d") %></td>
            </tr>
            <% end %>
        </tbody>
    </table>
</div>
<div class="desktop-only">
    <div style="text-align:center"><%= link_to("ゲームに戻る", "/games/infinite-blocks") %></div>
</div>
<div class="sponsored-link" style="margin-top: 60px; margin-bottom:100px">
    <h6>Sponsored Link</h6>
    <div class="ads-body">
        <script async src="https://pagead2.googlesyndication.com/pagead/js/adsbygoogle.js"></script>
        <!-- BigBanner -->
        <ins class="adsbygoogle" style="display:inline-block;width:728px;height:90px" data-ad-client="ca-pub-6705654465089208" data-ad-slot="2700218098"></ins>
        <script>
            (adsbygoogle = window.adsbygoogle || []).push({});

        </script>
    </div>
</div>
